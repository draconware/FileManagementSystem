<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="10sp"
                    android:text="File ID:"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/searchfilelistfileid"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_marginLeft="140dp"
                    android:padding="10sp"
                    android:text="File ID"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="10sp"
                    android:text="File Name:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/searchfilelistfilename"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/textView12"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="140dp"
                    android:padding="10sp"
                    android:text="File Name"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="115dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="10sp"
                    android:text="File Holder:"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/searchfilelistfileholder"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="140dp"
                    android:padding="10sp"
                    android:text="File Holder"
                    android:textSize="20sp"
                    android:layout_alignLeft="@+id/searchfilelistfileid" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="170dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="10sp"
                    android:text="Department:"
                    android:textSize="20sp"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/searchfilelistfiledepartment"
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="140dp"
                    android:padding="10sp"
                    android:text="Department"
                    android:textSize="20sp"
                    android:layout_alignLeft="@+id/searchfilelistfileid" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonsearchfilelist"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="105dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tv"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="Change LOcation" />

</LinearLayout>